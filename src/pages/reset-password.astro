---
import BangoName from '../components/BangoName';
import Layout from '../layouts/Layout.astro';

const error = Astro.url.searchParams.get('error');
const success = Astro.url.searchParams.get('success');
---

<Layout>
  <section class="bg-turquoiseShades w-screen h-screen flex flex-col items-center justify-center">
    <BangoName size="large" />
    <form action="/api/reset-password" method="post" class="w-80 mt-16">
      <div class="flex flex-col">
        <label for="emailField" class="mb-2 text-periwinkleBlue-50 uppercase tracking-wider text-base font-base">Email</label>
        <input class="mb-7 pt-2.5 px-2.5 pb-.5 bg-transparent border-b border-vistaWhite-50 text-base font-base text-vistaWhite-300 focus-visible:outline-none focus-visible:border-b focus-visible:border-periwinkleBlue-50" type="email" name="emailField" id="emailField" placeholder="sharonina" required>
      </div>
      <input style="border-image: linear-gradient(to right, #2EDAC1, #C5FF95) 1;" class="mt-8 mb-10 rounded text-base font-base uppercase tracking-wider text-sandyYellow-300 cursor-pointer w-full py-4 border" type="submit" value="Resetear Contraseña">
    </form>
    
    {error && (
      <p class="text-vistaWhite-50 uppercase font-base text-sm tracking-wide mt-4 px-4 py-3 bg-red-500 text-center font-bold rounded">
        Hubo un error, intenta de nuevo
      </p>
    )}
    
    {success && (
      <p class="text-vistaWhite-50 uppercase font-base text-sm tracking-wide mt-4 px-4 py-3 bg-green-500 text-center font-bold rounded">
        Revisa tu correo para continuar con el proceso de recuperación de contraseña
      </p>
    )}

    <p class="text-vistaWhite-50 uppercase font-base text-sm tracking-wide mt-4">¿Ya tienes cuenta? 
      <a class="cursor-pointer text-periwinkleBlue-50 hover:text-periwinkleBlue-600" href="/login"> Inicia sesión</a>
    </p>
    <p class="text-vistaWhite-50 uppercase font-base text-sm tracking-wide">¿Aún no tienes cuenta? 
      <a class="cursor-pointer text-periwinkleBlue-50 hover:text-periwinkleBlue-600" href="/sign-up"> Registrate</a>
    </p>
  </section>
</Layout>
